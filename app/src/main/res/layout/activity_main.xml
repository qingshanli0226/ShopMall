<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.app.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    android:orientation="vertical">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/frameLayout"
                android:layout_weight="1"></FrameLayout>

        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:id="@+id/rg">

            <RadioButton style="@style/MainButtonStyle"
                         android:text="首页"
                         android:drawableTop="@drawable/home_button_selector"
                         android:id="@+id/rb_home"/>

            <RadioButton style="@style/MainButtonStyle"
                         android:text="分类"
                         android:id="@+id/rb_type"
                         android:drawableTop="@drawable/type_button_selector"/>

            <RadioButton style="@style/MainButtonStyle"
                         android:text="发现"
                         android:id="@+id/rb_faxian"
                         android:paddingTop="10dp"
                         android:drawableTop="@drawable/community_button_selector"
            />

            <RadioButton style="@style/MainButtonStyle"
                         android:id="@+id/rb_cart"
                         android:text="购物车"
                         android:drawableTop="@drawable/cart_button_selector"
            />

            <RadioButton style="@style/MainButtonStyle"
                         android:id="@+id/rb_user"
                         android:text="个人中心"
                         android:drawableTop="@drawable/user_button_selector"
            />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>